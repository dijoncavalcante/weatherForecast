    <LinearLayout
        android:id="@+id/ll_day1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="Hoje"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_day1_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_day1_humidity"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_location_24" />

            <TextView
                android:id="@+id/tv_day1_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="17%"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_day1_temp1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_location_24" />

        <ImageView
            android:id="@+id/iv_day1_temp2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_location_24" />

        <TextView
            android:id="@+id/tv_day1_temp_max_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:hint="32°/32°"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

